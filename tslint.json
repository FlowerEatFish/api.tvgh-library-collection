{
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES2015",
      "DOM",
      "ScriptHost"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "sourceMap": false,
    "target": "es2015"
  },
  "defaultSeverity": "error",
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*"
  ],
  "jsRules": {},
  "rules": {
    "max-line-length": false,
  },
  "rulesDirectory": []
}